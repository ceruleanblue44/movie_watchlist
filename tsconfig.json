{
  "compilerOptions": {
    "target": "ESNext",              // modern JS output
    "module": "ESNext",              // module system
    "moduleResolution": "Node",
    "strict": true,                  // enable all TS strict checks
    "jsx": "preserve",               // for Vue JSX support
    "sourceMap": true,
    "baseUrl": ".",                  // for @ alias
    "paths": {
      "@/*": ["src/*"]               // your @ alias points to src/
    },
    "types": ["node"]                // Node types (for fetch, etc.)
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
, "src/router/index.ts"  ],
  "exclude": ["node_modules", "dist"]
}